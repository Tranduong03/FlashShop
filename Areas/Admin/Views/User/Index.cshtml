
@{
    ViewData["Title"] = "Danh sách người dùng";
}

@section Styles {
    <link rel="stylesheet" href="~/css/adminSite.css" />
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>         
            <th scope="col">Tên người dùng</th>            
            <th scope="col">Email</th>
            <th scope="col" class="Hashpass">Mật khẩu băm</th>
            <th scope="col">Quyền truy cập</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usersWithRoles in Model)
        {
            <tr>
                <th scope="row">@usersWithRoles.User.Id</th>
                <td>@usersWithRoles.User.UserName</td>
                <td>@usersWithRoles.User.Email</td>
                <td class ="Hashpass">@usersWithRoles.User.PasswordHash</td>
                <td>@usersWithRoles.RoleName</td>
                <td>
                    <div class="action-buttons">
                        <a asp-action="Edit" asp-controller="User" asp-route-id="@usersWithRoles.User.Id" class="btn btn-warning btn-sm">
                            Sửa
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center">
    <a asp-action="ExportUsersToExcel" asp-controller="User" class="btn btn-success btn-md mb-3 mt-3">
        Xuất Excel
    </a>
</div>

<style>
    .table .Hashpass {
        max-width: 500px !important;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
