        @ViewBag.CountOrder
    </div>
    <div class="col-md-3">
        <p>Thống kê loại sách</p>
        @ViewBag.CountCategory
    </div>
    <div class="col-md-3">
        <p>Thống kê người dùng</p>
        @ViewBag.CountUser
    </div>
</div>
