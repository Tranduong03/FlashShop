@model FlashShop.Models.Customer;
<link href="~/css/login.css" rel="stylesheet" />
<form asp-action="Register" method="post" class="form-container">
    <div class="form-group">
        <label asp-for="CustomerName" class="form-label"></label>
        <input asp-for="CustomerName" class="form-input" />
        <span asp-validation-for="CustomerName" class="form-validation"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account" class="form-label"></label>
        <input asp-for="Account" class="form-input" />
        <span asp-validation-for="Account" class="form-validation"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-input" />
        <span asp-validation-for="Email" class="form-validation"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-input" />
        <span asp-validation-for="Password" class="form-validation"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-input" />
        <span asp-validation-for="ConfirmPassword" class="form-validation"></span>
    </div>

    <button type="submit" class="btn-submit">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

