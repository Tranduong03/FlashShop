@model EditProfileViewModel

<h2>Cập nhật thông tin cá nhân</h2>

<form asp-action="EditProfile" method="post">
    <div class="form-group">
        <label for="UserName">Tên đăng nhập</label>
        <input type="text" class="form-control" id="UserName" asp-for="UserName" readonly />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" asp-for="Email" readonly />
    </div>
    <div class="form-group">
        <label for="FullName">Họ tên</label>
        <input type="text" class="form-control" id="FullName" asp-for="FullName" />
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Số điện thoại</label>
        <input type="text" class="form-control" id="PhoneNumber" asp-for="PhoneNumber" />
    </div>
    <div class="form-group">
        <label for="Address">Địa chỉ</label>
        <input type="text" class="form-control" id="Address" asp-for="Address" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
